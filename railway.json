{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r backend/requirements.txt"
  },
  "deploy": {
    "workdir": "backend",
    "startCommand": "gunicorn backend.wsgi --bind 0.0.0.0:$PORT",
    "preDeploy": "python manage.py migrate && python manage.py collectstatic --noinput"
  }
}
